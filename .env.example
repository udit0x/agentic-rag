# Environment Configuration for Agentic RAG Application

# Database Configuration
DB_TYPE=sqlite
# For SQLite (default)
# DATABASE_PATH=./data/local.sqlite

# For PostgreSQL (uncomment and configure)
# DB_TYPE=postgresql
# DATABASE_URL=postgresql://username:password@localhost:5432/agentic_rag

# Server Configuration
PORT=5000
NODE_ENV=development

# API Configuration
API_BASE_URL=http://localhost:5000/api

# Features
ENABLE_ANALYTICS=true
ENABLE_TRACING=true
ENABLE_FILE_UPLOAD=true
ENABLE_MULTI_USER=false

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES=100
MAX_CHUNK_SIZE=1000

# AI Configuration (when integrated)
# OPENAI_API_KEY=your_openai_api_key_here
# EMBEDDING_MODEL=text-embedding-ada-002
# CHAT_MODEL=gpt-4

# Azure Configuration (when using Azure OpenAI)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your_azure_openai_key
# AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Performance
SQLITE_WAL_MODE=true
SQLITE_CACHE_SIZE=1000000
DB_CONNECTION_POOL_SIZE=10

# Security
SESSION_SECRET=your_session_secret_here_change_in_production
CORS_ORIGIN=http://localhost:5000

# Logging
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true